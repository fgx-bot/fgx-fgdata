<?xml version="1.0"?>

<PropertyList>
    <name>ATC2</name>
    <w-base>1024</w-base>
    <h-base>768</h-base>

    <layers>

        <layer>
            <name>tint</name>
            <condition>
                <property>sim/atc/screen-tint</property>
            </condition>
            <texture>
                <path>Aircraft/ATC/Ver2/tint.png</path>
                <x1>0</x1>
                <y1>0</y1>
                <x2>1</x2>
                <y2>1</y2>
            </texture>
            <w>1024</w>
            <h>768</h>
        </layer>

        <layer>
            <name>ground network</name>
            <condition>
                <and>
                    <property>sim/atc/runways-enabled</property>
                    <equals>
                        <property>sim/atc/carrier</property>
                        <value>0</value>
                    </equals>
                </and>
            </condition>
            <texture>
                <path>Aircraft/Instruments/Textures/od_groundradar.rgb</path>
                <x1>0</x1>
                <y1>0</y1>
                <x2>1</x2>
                <y2>1</y2>
            </texture>
            <emissive>true</emissive>
            <w>780</w>
            <h>780</h>
            <transformations>
                <transformation>
                    <type>rotation</type>
                    <property>orientation/heading-deg</property>
                    <scale>-1</scale>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>wxradar</name>
            <texture>
                <path>Aircraft/Instruments/Textures/od_wxradar.rgb</path>
                <x1>0</x1>
                <y1>0</y1>
                <x2>1</x2>
                <y2>1</y2>
            </texture>
            <emissive>true</emissive>
            <w>780</w>
            <h>780</h>
        </layer>

        <layer>
            <name>radar heading1</name>
