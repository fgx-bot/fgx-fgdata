<?xml version="1.0"?>

<PropertyList>

 <path>WrightFlyer-pb-jw.ac</path>

 <!-- object selection -->

 <!-- hide hat if view is pilot's eye (or very near Orville's face) -->
 <animation>
  <type>select</type>
  <object-name>OrvilleHat</object-name>
  <condition>
   <and>
     <or>
     <greater-than>
      <property>/sim/current-view/x-offset-m</property>
      <value>-0.41</value>
     </greater-than>
     <less-than>
      <property>/sim/current-view/x-offset-m</property>
      <value>-0.51</value>
     </less-than>
     </or>
     <or>
     <greater-than>
      <property>/sim/current-view/z-offset-m</property>
      <value>-0.77</value>
     </greater-than>
     <less-than>
      <property>/sim/current-view/z-offset-m</property>
      <value>-0.87</value>
     </less-than>
     </or>
   </and>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>Disks</object-name>
  <condition>
   <greater-than>
    <property>engines/engine[0]/rpm</property>
    <value>800</value>
   </greater-than>
  </condition>
 </animation>

 <!-- wing warp -->

 <animation>
  <type>select</type>
  <object-name>WingTop</object-name>
  <object-name>WingBottom</object-name>
  <condition>
   <and>
   <less-than>
    <property>controls/flight/aileron</property>
    <value>0.5</value>
   </less-than>
   <greater-than>
    <property>controls/flight/aileron</property>
    <value>-0.5</value>
   </greater-than>
   </and>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>WingTopWarpLeft</object-name>
  <object-name>WingBottomWarpLeft</object-name>
  <condition>
   <less-than>
    <property>controls/flight/aileron</property>
    <value>-0.5</value>
   </less-than>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>WingTopWarpRight</object-name>
  <object-name>WingBottomWarpRight</object-name>
  <condition>
   <greater-than>
    <property>controls/flight/aileron</property>
    <value>0.5</value>
   </greater-than>
  </condition>
 </animation>

 <!-- animations -->

 <animation>
  <type>spin</type>
  <object-name>RightPropeller</object-name>
  <object-name>CogRightPropShaft</object-name>
  <property>engines/engine[0]/rpm</property>
  <factor>.133</factor>
  <center>
   <x-m>1.56</x-m>
   <y-m>1.69</y-m>
   <z-m>0.53</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>spin</type>
  <object-name>LeftPropeller</object-name>
  <object-name>CogLeftPropShaft</object-name>
  <property>engines/engine[0]/rpm</property>
  <factor>.133</factor>
  <center>
   <x-m>1.56</x-m>
   <y-m>-1.69</y-m>
   <z-m>0.53</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Rudder</object-name>
  <property>controls/flight/rudder</property>
  <factor>20</factor> <!-- check -->
  <center>
   <x-m>2.96</x-m>
   <y-m>0</y-m>
   <z-m>0.16</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

