<?xml version="1.0"?>
 
<PropertyList>
 <fx>
  <crank>
   <name>cranking</name>
   <mode>looped</mode>
   <path>Aircraft/Storch/Sound/starter.wav</path>
   <condition>
    <greater-than>
     <property>/engines/engine/rpm</property>
     <value>100</value>
    </greater-than>
    <less-than>
     <property>/engines/engine/rpm</property>
     <value>450</value>
    </less-than>
   </condition>
   <volume>
    <!-- property>/engines/engine/cranking</property -->
    <offset>1.00</offset>
   </volume>
  </crank>
  

  <engine>
   <name>enginerun</name>
   <mode>looped</mode>
   <path>Aircraft/Storch/Sound/waspjr.wav</path>
   <condition>
    <greater-than>
     <property>/engines/engine/rpm</property>
     <value>450</value>
    </greater-than>
   </condition>
   <volume>
    <!-- property>/controls/engines/engine/throttle</property -->
    <min>0.5</min>
    <max>1.00</max>
    <offset>1.00</offset>
   </volume>
   <pitch>
    <property>/engines/engine/rpm</property>
    <factor>0.0004</factor>
    <offset>0.2</offset>
   </pitch>
  </engine>
  
  <rumble>
   <name>rumble</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/compression-norm</property>
     <property>/gear/gear[1]/compression-norm</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <type>log</type>
    <factor>0.4</factor>
    <min>0.0</min>
    <max>1.0</max>
   </volume>
  </rumble>

  <splash>
   <name>splash</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/compression-norm</property>
     <property>/gear/gear[1]/compression-norm</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <offset>0.0</offset>
	<factor>0.02</factor>
	<min>0.4</min>
	<max>0.9</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <offset>1.2</offset>
   <max>1.5</max> 
   </pitch>
  </splash>


  <squeal>
   <name>squeal</name>
   <path>Sounds/squeal.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/compression-norm</property>
     <property>/gear/gear[1]/compression-norm</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/speed-down-fps</property>
    <factor>0.5</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <internal>dt_stop</internal>
    <factor>0.05</factor>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0025</factor>
    <offset>0.5</offset>
    <max>1.0</max>
   </pitch>
  </squeal>
 
  <flap>
   <name>flaps</name>
   <mode>in-transit</mode>
   <path>Aircraft/Storch/Sound/chainsound.wav</path>
   <property>/surface-positions/flap-pos-norm</property>
   <volume>
    <factor>0.75</factor>
    <max>1.0</max>
   </volume>
  </flap>

  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <property>/velocities/airspeed-kt</property>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.01</factor>
     <min>0.0</min>
     <max>0.5</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.001</factor>
    <offset>0.5</offset>
     <min>0.5</min>
     <max>1.0</max>
   </pitch>
  </wind>
 
  <stall>
   <name>stall</name>
   <mode>looped</mode>
   <path>Sounds/stall.wav</path>
   <property>/sim/alarms/stall-warning</property>
   <volume>
    <property>/sim/alarms/stall-warning</property>
    <max>1.0</max>
   </volume>
  </stall>
        
 </fx>
 
</PropertyList>
