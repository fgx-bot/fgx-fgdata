<?xml version="1.0" encoding="UTF-8"?>

<!-- Zlin 50 lx
     3D model by Emmanuel BARANGER
     FDM by Pierre GEOFFROY 
     2011 updated with Melchior's script by BARANGER Emmanuel

     sources : http://en.wikipedia.org/wiki/Zl%C3%ADn_Z_50

     Wingspan        :  8.58 m    (   28 ft 1 3/4 in )
     Lenght          :  6.62 m    (   21 ft 8 3/4 in )
     Height          :  1.86 m    (    6 ft 1 1/4 in )
     Empty mass      :   570 kg   ( 1256 lb          )
     Engines         : Lycoming AEIO-540-D4B5 air-cooled flat-six engine ( 260 hp )
     Cruise speed    :   240 km/h (  129 kt          )
     Maximim speed   :   293 km/h (  158 kt          )

-->

<airplane mass="1256">

  <!-- Approach configuration -->
  <approach speed="59" aoa="10" fuel="0.2">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.2"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="1.0"/>
  </approach>

  <!-- Cruise configuration -->
  <cruise speed="158" alt="6000" fuel="0.375">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="1.0"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="1.0"/>
  </cruise>

  <cockpit x="0.548" y="0.0" z="0.508"/>

  <!-- Fuselage -->
  <fuselage ax="2.943" ay="0" az="-0.014" bx="-3.336" by="0" bz="-0.031" width="1.008" taper="0.2" midpoint="0.40 "/>

  <wing x="0.961" y="0.393" z="-0.410"  
        taper="0.72" 
        incidence="0"
        twist="0"
        length="3.882" 
        chord="1.714" 
        sweep="0" 
        dihedral="0" 
        camber="0.035"> 
        <stall aoa="24" width="4" peak="1.5"/>
        <flap1 start="0.17" end="1" lift="1.3" drag="1.1"/>
        <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>
        <control-output control="FLAP1" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1" side="right" prop="/surface-positions/right-aileron-pos-norm"/> 
  </wing>

  <hstab x="-2.498" y="0.0" z="0.416" 
         taper="0.75" 
         incidence="0" 
         length="1.612" 
         chord="1.071" 
         sweep="0">
         <stall aoa="24" width="2" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.4" drag="1.1"/>
         <control-input axis="/controls/flight/elevator" control="FLAP0"/>
         <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>
         <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

  <vstab x="-2.430" y="0" z="-0.095" 
         taper="0.23" 
         length="1.575" 
         chord="1.666" 
         sweep="15">
         <stall aoa="18" width="4" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.5" drag="1.2"/>
         <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>
         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm" min="1" max="-1"/>
  </vstab>

  <!--
       Engine    : Textron Lycoming AEIO-540-L1B5D
       Propeller : MT-Propeller MTV-9-B-C/200-15a
       MTOM      : 720 kg aerobatic configuration

       Sources      : http://en.wikipedia.org/wiki/Lycoming_O-540

       Type         : Six-cylinder air-cooled horizontally opposed engine
       Power        : 300 hp at 2700 rpm at sea level
       Displacement : 541.5 in3 ( 8.9 L  )
       Masse        : 438 lb    ( 199 kg )
       Compression  : 8.7:1
  -->
  <propeller x="2.490" y="0.0" z="-0.026" 
	     mass="438"
	     moment="8.2"
             radius="1.0"
	     cruise-speed="129" 
	     cruise-rpm="2450"
	     cruise-alt="6000" 
	     cruise-power="225"
	     takeoff-power="300" 
	     takeoff-rpm="2700"
             min-rpm="600"
             max-rpm="2700"
	     fine-stop="0.8"
	     coarse-stop="2">
             <actionpt x="3.045" y="0.0" z="-0.019"/>
             <piston-engine eng-rpm="2700" 
                            eng-power="300"
                            displacement="541.5" 
                            compression="8.7"/>
             <control-input control="THROTTLE" axis="/controls/engines/engine[0]/throttle"/>
             <control-input control="STARTER" axis="/controls/engines/engine[0]/starter"/>
             <control-input control="MAGNETOS" axis="/controls/engines/engine[0]/magnetos"/>
             <control-input control="MIXTURE" axis="/controls/engines/engine[0]/mixture"/>
             <control-input control="ADVANCE" axis="/controls/engines/engine[0]/propeller-pitch"/>
  </propeller>
  
  <!-- Left wheel -->
  <gear x="1.968" y="1.118" z="-1.410"  
        compression="0.35"
        spring="0.8" 
        on-solid="1"
        sfric="1"
        dfric="1">
        <control-input axis="/controls/gear/brake-left" control="BRAKE" split="true"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
  </gear>

  <!-- Right wheel -->
  <gear x="1.968" y="-1.118" z="-1.410" 
        compression="0.35"
        spring="0.8"
        on-solid="1"
        sfric="1"
        dfric="1">
        <control-input axis="/controls/gear/brake-right" control="BRAKE" split="true"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
  </gear>

  <!-- Tail wheel -->
  <gear x="-3.099" y="0" z="-0.650" 
        compression="0.2"
        spring="0.8"
        on-solid="1"
        sfric="1"
        dfric="1">
        <control-input axis="/controls/flight/rudder" control="STEER" src0="-1.0" src1="1.0" dst0="0.5" dst1="-0.5"/>
  </gear>

  <!-- Fuel - Central tank 60 liters - Wing's tanks 2 X 50 liters -->
  <tank x="1.9" y="0" z="-0.02" capacity="95" />
  <tank x="0.981" y="1.043" z="-0.410" capacity="79.2" />
  <tank x="0.981" y="-1.043" z="-0.410" capacity="79.2" />

  <!-- Pilot -->
  <weight x="0.475" y="0" z="0.057" mass-prop="/sim/weight[0]/weight-lb"/>

  <!-- Mass distribution
       CG theorique x=0.961 y=0.0 z=-0.510
  -->
  <ballast x="-0.534" y="-0.001" z="-1.616" mass="350"/>
  
</airplane>

