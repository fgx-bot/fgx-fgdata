<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>VSI.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>Face</object-name>
    <object-name>Bezel</object-name>
    <object-name>PointerTip</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>PointerTip</object-name>   
    <emission>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>PointerTip</object-name>
    <property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
    <interpolation>
      <entry><ind> -5905.50 </ind><dep> -180 </dep></entry>
      <entry><ind> -3937.02 </ind><dep> -170 </dep></entry>
      <entry><ind> -1968.48 </ind><dep> -160 </dep></entry>
      <entry><ind>  -984.24 </ind><dep>  -80 </dep></entry>
      <entry><ind>     0.00 </ind><dep>    0 </dep></entry>
      <entry><ind>   984.24 </ind><dep>   80 </dep></entry>
      <entry><ind>  1968.48 </ind><dep>  160 </dep></entry>
      <entry><ind>  3937.02 </ind><dep>  170 </dep></entry>
      <entry><ind>  5905.50 </ind><dep>  180 </dep></entry>
    </interpolation>
    <axis> 
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
  </animation>

</PropertyList>
