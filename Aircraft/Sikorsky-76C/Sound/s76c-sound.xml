<!-- S-76C sound config-->
<PropertyList>
    <fx>

        <turbine-start>
            <name>turbine on</name>
            <mode>once</mode>
            <path>Aircraft/Sikorsky-76C/Sound/s76-start.wav</path>
            <max-dist>10</max-dist>
            <reference-dist>5</reference-dist>
            <condition>
                <property>/engines/engine/running</property>
            </condition>
            <volume>
                <property>/sim/sound/S76C/Ovolume</property>
                <min>0</min>
                <max>1.0</max>
            </volume>
            <pitch>
                <offset>1.0</offset>
            </pitch>
            <position>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </position>
        </turbine-start>

        <rotor>
            <name>main rotor</name>
            <mode>looped</mode>
            <path>Aircraft/Sikorsky-76C/Sound/s76-rotor.wav</path>
            <max-dist>500</max-dist>
            <reference-dist>150</reference-dist>
            <condition>
                <greater-than>
                <property>/rotors/main/rpm</property>
                <value>2</value>
                </greater-than>
            </condition>
            <volume>
                <property>/sim/sound/S76C/Ovolume</property>
                <min>0</min>
                <max>1.0</max>
            </volume>
            <pitch>
                <property>/rotors/main/rpm</property>
                <factor>0.0034</factor>
                <offset>0.0</offset>
                <min>0.00</min>
                <max>1.0</max>
            </pitch>
            <position>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </position>
        </rotor>

        <cabin>
            <name>whine</name>
            <mode>looped</mode>
            <path>Aircraft/Sikorsky-76C/Sound/whine.wav</path>
            <condition>
                <greater-than>
                <property>/rotors/main/rpm</property>
                <value>5</value>
                </greater-than>
            </condition>
            <reference-dist>5</reference-dist>
            <volume>
                <property>/sim/sound/S76C/Cvolume</property>
            </volume>
            <pitch>
                <property>/rotors/main/rpm</property>
                <factor>0.003</factor>
                <offset>0.0</offset>
                <min>0.0</min>
                <max>0.8</max>
            </pitch>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-0.5</z>
            </position>
        </cabin>

        <turbine-stop>
            <name>turbine off</name>
            <mode>once</mode>
            <path>Aircraft/Sikorsky-76C/Sound/s76-shutdown.wav</path>
            <max-dist>10</max-dist>
            <reference-dist>5</reference-dist>
            <condition>
                <not>
                    <property>/engines/engine/running</property>
                </not>
            </condition>
            <volume>
                <property>/sim/sound/S76C/Ovolume</property>
                <min>0</min>
                <max>1.0</max>
            </volume>
            <pitch>
                <offset>1.0</offset>
            </pitch>
            <position>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </position>
        </turbine-stop>

        <overspeed>
            <name>overspeed</name>
            <mode>looped</mode>
            <path>Sounds/overspeed.wav</path>
            <condition>
                <greater-than>
                <property>/velocities/airspeed-kt</property>
                <value>155</value>
                </greater-than>
            </condition>
            <max-dist>10</max-dist>
            <reference-dist>5</reference-dist>
            <volume>
                <property>/sim/sound/S76C/Ovolume</property>
            </volume>
            <position>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </position>
        </overspeed>

        <contact>
            <name>ground contact</name>
            <mode>once</mode>
            <path>Sounds/helicopter-skid.wav</path>
            <condition>
                <or>
                    <property>gear/gear[0]/wow</property>
                    <property>gear/gear[1]/wow</property>
                    <property>gear/gear[2]/wow</property>
                    <property>gear/gear[3]/wow</property>
                </or>
            </condition>
            <max-dist>10</max-dist>
            <reference-dist>5</reference-dist>
            <volume>
                <property>/sim/sound/S76C/Cvolume</property>
            </volume>
            <volume>
                <factor>0.8</factor>
            </volume>
            <pitch>
                <factor>0.01</factor>
            </pitch>
            <max-dist>5.0</max-dist>
            <max-dist>10.0</max-dist>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-2</z>
            </position>
        </contact>

        <wind>
            <name>wind</name>
            <mode>looped</mode>
            <path>Sounds/wind.wav</path>
            <condition>
                <and>
                    <property>velocities/airspeed-kt</property>
                    <not>
                        <property>sim/crashed</property>
                    </not>
                </and>
            </condition>
            <max-dist>5</max-dist>
            <reference-dist>2</reference-dist>
            <volume>
                <property>/sim/sound/S76C/Cvolume</property>
            </volume>
            <volume>
                <property>position/altitude-ft</property>
                <factor>-0.000015</factor>
                <offset>1.0</offset>
                <min>0.1</min>
                <max>1.0</max>
            </volume>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.0015</factor>
                <min>0.03</min>
                <max>0.25</max>
            </volume>
            <pitch>
                <property>velocities/airspeed-kt</property>
                <factor>0.01</factor>
                <offset>1.0</offset>
            </pitch>
            <max-dist>10.0</max-dist>
            <position>
                <x>-2.1</x>
                <y>1.5</y>
                <z>-1.05</z>
            </position>
        </wind>

        <crash>
            <name>intense ground contact</name>
            <mode>once</mode>
            <path>Sounds/crash.wav</path>
            <property>sim/crashed</property>
            <max-dist>100</max-dist>
            <reference-dist>50</reference-dist>
            <volume>
                <factor>1</factor>
            </volume>
            <pitch>
                <factor>0.1</factor>
            </pitch>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-1.5</z>
            </position>
        </crash>

        <door>
            <name>close doors</name>
            <mode>once</mode>
            <path>Sounds/door_close.wav</path>
            <condition>
                <equals>
                    <property>controls/doors/rear</property>
                    <value>0</value>
                </equals>
            </condition>
            <max-dist>5</max-dist>
            <reference-dist>2</reference-dist>
            <volume>
                <factor>0.5</factor>
            </volume>
        </door>

        <gear>
            <name>gear</name>
            <mode>in-transit</mode>
            <path>Sounds/gear.wav</path>
            <property>gear/gear[0]/position-norm</property>
            <pitch>
                <internal>dt_play</internal>
                <offset>0.8</offset>
                <factor>-0.001</factor>
            </pitch>
            <reference-dist>5.0</reference-dist>
            <max-dist>10.0</max-dist>
            <position>
                <x>-2</x>
                <y>0</y>
                <z>-2</z>
            </position>
        </gear>

        <gear>
            <name>gear-lock</name>
            <path>Sounds/gear-lck.wav</path>
            <condition>
                <equals>
                    <property>gear/gear[0]/position-norm</property>
                    <value>0</value>
                </equals>
            </condition>
            <reference-dist>5.0</reference-dist>
            <max-dist>10.0</max-dist>
            <position>
                <x>-2</x>
                <y>0</y>
                <z>-2</z>
            </position>
    </gear>

    </fx>
</PropertyList>
