<?xml version="1.0"?>

<PropertyList>
	<path>splash-impact.ac</path>

	<animation>
		<enable-hot type="bool">false</enable-hot>
	</animation>

	<animation>
		<type>billboard</type>
		<spherical>true</spherical>
	</animation>

	<animation>
		<type>scale</type>
		<object-name>puff</object-name>
		<use-personality>true</use-personality>
		<property>sim/time/elapsed-sec</property>
		<x-min>0.3</x-min>
		<y-min>0.3</y-min>
		<z-min>0.3</z-min>
		<x-factor>0.3</x-factor>
		<y-factor>0.3</y-factor>
		<z-factor>0.3</z-factor>
	</animation>

	<animation>
		<type>blend</type>
		<object-name>puff</object-name>
		<use-personality>true</use-personality>
		<property>sim/time/elapsed-sec</property>
		<factor>0.30</factor>
		<!--<offset>0.8</offset>-->
		<min>0.1</min>
		<max>1.0</max>
	</animation>

</PropertyList>
