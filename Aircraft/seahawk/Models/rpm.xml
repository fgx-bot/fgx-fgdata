<?xml version="1.0"?>

<!-- engine rpm clock instrument -->

<PropertyList>

	<path>rpm.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>rpm-Needle1</object-name>
		<property>/engines/engine/n1</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>25</ind>
				<dep>720</dep>
			</entry>
			<entry>
				<ind>50</ind>
				<dep>1440</dep>
			</entry>
			<entry>
				<ind>75</ind>
				<dep>2160</dep>
			</entry>
			<entry>
				<ind>100</ind>
				<dep>2880</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>rpm-Needle2</object-name>
		<property>/engines/engine/n1</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>25</ind>
				<dep>54</dep>
			</entry>
			<entry>
				<ind>50</ind>
				<dep>104</dep>
			</entry>
			<entry>
				<ind>75</ind>
				<dep>154</dep>
			</entry>
			<entry>
				<ind>100</ind>
				<dep>206</dep>
			</entry>
			<entry>
				<ind>125</ind>
				<dep>254</dep>
			</entry>
			<entry>
				<ind>150</ind>
				<dep>306</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- Panel Lighting -->
	<animation>
		<type>material</type>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>

	<!-- *** LoD *** -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>

</PropertyList>
