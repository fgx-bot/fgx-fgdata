<?xml version="1.0"?>

<!-- gyro gun sight -->

<PropertyList>

	<path>ggs-mod1.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>knob</object-name>
		<property>/sim/aim/range-yds</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>-90</dep>
			</entry>
			<entry>
				<ind>300</ind>
				<dep>-40</dep>
			</entry>
			<entry>
				<ind>550</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>1000</ind>
				<dep>50</dep>
			</entry>
			<entry>
				<ind>2000</ind>
				<dep>90</dep>
			</entry>
		</interpolation>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		
		<!--0.00564256	0.0115616	-1.24006e-005-->
		<center>
			<x-m>0.00564256</x-m>
			<y-m>0</y-m>
			<z-m>0.0115616</z-m>
		</center>
	</animation>


	<animation>
		<type>pick</type>
		<object-name>range-inc</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/sim/aim/range-yds</property>
				<step>100</step>
				<min>0</min>
				<max>2000</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>range-dec</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/sim/aim/range-yds</property>
				<step>-100</step>
				<min>0</min>
				<max>2000</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>

	<animation>
		<type>material</type>
		<object-name>graticule</object-name>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>graticule</object-name>
	</animation>

	<!-- *** LoD *** 
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>100</max-m>
 </animation>
-->
</PropertyList>
