<?xml version="1.0"?>
<!--
This is a hacked copy of the A-4 sound file.
The samples called are copies of the A-4 samples.
-->
<PropertyList>
	<fx>
		<engine>
			<name>engine</name>
			<path>Aircraft/seahawk/Sounds/Samples/jet.wav</path>
			<mode>looped</mode>
			<property>/engines/engine[0]/running</property>
			<volume>
				<property>/engines/engine[0]/prop-thrust</property>
				<type>lin</type>
				<factor>0.0002353</factor>
				<!-- Scales to 0-2 for 8500lb engine -->
				<max>0.75</max>
			</volume>
		</engine>
		<engine>
			<name>whine</name>
			<path>Aircraft/seahawk/Sounds/Samples/whine.wav</path>
			<mode>looped</mode>
			<property>/engines/engine[0]/running</property>
			<pitch>
				<property>/engines/engine[0]/n1</property>
				<type>lin</type>
				<factor>.008</factor>
			</pitch>
			<volume>
				<property>/engines/engine[0]/n1</property>
				<type>log</type>
				<factor>0.1</factor>
				<!-- 10-100% rpm == 0.1 - 1 factor -->
				<max>0.75</max>
			</volume>
		</engine>
		<rumble>
			<name>rumble</name>
			<mode>looped</mode>
			<path>Aircraft/seahawk/Sounds/Samples/rumble.wav</path>
			<condition>
				<or>
					<property>/gear/gear[0]/wow</property>
					<property>/gear/gear[1]/wow</property>
					<property>/gear/gear[2]/wow</property>
				</or>
			</condition>
			<volume>
				<property>/velocities/airspeed-kt</property>
				<type>lin</type>
				<factor>.012</factor>
				<max>1.0</max>
			</volume>
		</rumble>
		<gear>
			<name>gear</name>
			<mode>in-transit</mode>
			<path>Aircraft/seahawk/Sounds/Samples/gear.wav</path>
			<property>/gear/gear[0]/position-norm</property>
			<pitch>
				<internal>dt_play</internal>
				<offset>1.0</offset>
				<factor>-0.001</factor>
			</pitch>
		</gear>
		<gear>
			<name>gear-lock</name>
			<path>Aircraft/seahawk/Sounds/Samples/gear-lck.wav</path>
			<condition>
				<equals>
					<property>/gear/gear[0]/position-norm</property>
					<value>0</value>
				</equals>
			</condition>
		</gear>
		<gear>
			<name>gear</name>
			<mode>in-transit</mode>
			<path>Aircraft/seahawk/Sounds/Samples/gear.wav</path>
			<property>/gear/gear[1]/position-norm</property>
			<pitch>
				<internal>dt_play</internal>
				<offset>1.0</offset>
				<factor>-0.001</factor>
			</pitch>
		</gear>
		<gear>
			<name>gear-lock</name>
			<path>Aircraft/seahawk/Sounds/Samples/gear-lck.wav</path>
			<condition>
				<equals>
					<property>/gear/gear[1]/position-norm</property>
					<value>0</value>
				</equals>
			</condition>
		</gear>
		<gear>
			<name>gear</name>
			<mode>in-transit</mode>
			<path>Aircraft/seahawk/Sounds/Samples/gear.wav</path>
			<property>/gear/gear[2]/position-norm</property>
			<pitch>
				<internal>dt_play</internal>
				<offset>1.0</offset>
				<factor>-0.001</factor>
			</pitch>
		</gear>
		<gear>
			<name>gear-lock</name>
			<path>Aircraft/seahawk/Sounds/Samples/gear-lck.wav</path>
			<condition>
				<equals>
					<property>/gear/gear[2]/position-norm</property>
					<value>0</value>
				</equals>
			</condition>
		</gear>
		<squeal>
			<name>squeal</name>
			<path>Aircraft/seahawk/Sounds/Samples/squeal.wav</path>
			<condition>
				<or>
					<property>/gear/gear[0]/wow</property>
					<property>/gear/gear[1]/wow</property>
					<property>/gear/gear[2]/wow</property>
				</or>
			</condition>
			<volume>
				<property>/velocities/speed-down-fps</property>
				<factor>0.05</factor>
				<max>1.0</max>
			</volume>
			<volume>
				<property>/velocities/airspeed-kt</property>
				<factor>0.01</factor>
			</volume>
			<volume>
				<internal>dt_stop</internal>
				<factor>0.05</factor>
				<max>1.0</max>
			</volume>
			<pitch>
				<property>/velocities/airspeed-kt</property>
				<factor>0.0025</factor>
				<offset>1.2</offset>
			</pitch>
		</squeal>
		<flap>
			<name>flaps</name>
			<mode>in-transit</mode>
			<path>Aircraft/seahawk/Sounds/Samples/flaps.wav</path>
			<property>/surface-positions/flap-pos-norm</property>
			<volume>
				<offset>0.25</offset>
				<max>0.9</max>
			</volume>
		</flap>
		<flap>
			<name>flaps</name>
			<mode>in-transit</mode>
			<path>Sounds/flaps.wav</path>
			<property>/surface-positions/flap-pos-norm</property>
			<volume>
				<offset>0.25</offset>
				<max>0.9</max>
			</volume>
		</flap>
		<wind>
			<name>wind</name>
			<mode>looped</mode>
			<path>Aircraft/seahawk/Sounds/Samples/wind.wav</path>
			<property>/velocities/airspeed-kt</property>
			<volume>
				<property>/position/altitude-ft</property>
				<factor>-0.000015</factor>
				<offset>1.0</offset>
				<min>0.1</min>
				<max>1.0</max>
			</volume>
			<volume>
				<property>/velocities/airspeed-kt</property>
				<factor>0.0015</factor>
				<min>0.03</min>
				<max>0.20</max>
			</volume>
			<pitch>
				<property>/velocities/airspeed-kt</property>
				<factor>0.01</factor>
				<offset>1.25</offset>
			</pitch>
		</wind>
		<!-- no binding yet?
  <stall>
   <name>stall</name>
   <path>Aircraft/seahawk/Sounds/Samples/stall.wav</path>
   <property>/sim/alarms/stall-warning</property>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <min>30.0</min>
   </volume>
  </stall>-->
		<click>
			<name>hook click down</name>
			<path>Aircraft/seahawk/Sounds/Samples/click.wav</path>
			<condition>
				<property>/controls/gear/tailhook</property>
			</condition>
			<volume>
				<factor>1.0</factor>
			</volume>
		</click>
		<click>
			<name>hook click up</name>
			<path>Aircraft/seahawk/Sounds/Samples/click.wav</path>
			<condition>
				<not>
					<property>/controls/gear/tailhook</property>
				</not>
			</condition>
			<volume>
				<factor>1.0</factor>
			</volume>
		</click>
		<guns>
			<name>gunfire</name>
			<mode>looped</mode>
			<path>Aircraft/seahawk/Sounds/Samples/gunfire_1.wav</path>
			<condition>
				<property>controls/armament/trigger</property>
				<property>ai/submodels/submodel[1]/count[0]</property>
			</condition>
			<volume>
				<max>1.0</max>
			</volume>
			<pitch>
				<factor>1</factor>
				<offset>0.2</offset>
			</pitch>
		</guns>
	</fx>
</PropertyList>
