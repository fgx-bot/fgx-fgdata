<?xml version="1.0"?>
<PropertyList>

<!-- =============================== -->
<!-- ======  Roll Axis Modes  ====== -->
<!-- =============================== -->

<!-- Wing leveler -->
<pid-controller>
  <name>Wing Leveler (Turn Coordinator based)</name>
  <debug>false</debug>
  <enable>
    <prop>autopilot/locks/heading</prop>
    <value>ROLL</value>
  </enable>
  <input>
    <prop>orientation/roll-deg</prop>
  </input>
  <reference>
    <value>autopilot/settings/target-roll-deg</value>
  </reference>
  <output>
    <prop>autopilot/internal/target-roll-deg</prop>
  </output>
  <config>
    <Ts>0.05</Ts>
    <Kp>0.15</Kp>
    <beta>1.0</beta>
    <alpha>0.1</alpha>
    <gamma>0.0</gamma>
    <Ti>10.0</Ti>
    <Td>0.01</Td>
    <u_min>
        <prop>instrumentation/flightdirector/roll-min</prop>
    </u_min>
    <u_max>
        <prop>instrumentation/flightdirector/roll-max</prop>
    </u_max>
  </config>
</pid-controller>

