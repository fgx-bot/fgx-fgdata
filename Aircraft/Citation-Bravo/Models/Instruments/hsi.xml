<PropertyList>

    <path>hsi.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>hdgring</object-name>
        <object-name>CRSneedle2</object-name>
        <object-name>CRSneedle2.001</object-name>
        <property>orientation/heading-magnetic-deg</property>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>CRSneedle2</object-name>
        <object-name>CRSneedle2.001</object-name>
        <property>instrumentation/flightdirector/crs</property>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>CRSneedle2.001</object-name>
        <property>instrumentation/flightdirector/crs-deflection</property>
        <interpolation>
            <entry>
                <ind>-10.0</ind><dep>-0.013</dep>
            </entry>
            <entry>
                <ind>0.0</ind><dep>0.0</dep>
            </entry>
            <entry>
                <ind>10.0</ind><dep>0.013</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>HSI.gsneedle</object-name>
        <property>instrumentation/nav/gs-needle-deflection</property>
        <interpolation>
            <entry>
                <ind>-10.0</ind><dep>-0.01</dep>
            </entry>
            <entry>
                <ind>0.0</ind><dep>0.0</dep>
            </entry>
            <entry>
                <ind>10.0</ind><dep>0.01</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>ADF.needle</object-name>
        <property>instrumentation/adf/indicated-bearing-deg</property>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

<!-- -hotspots -->

<animation>
    <type>pick</type>
    <object-name>HSI.knob</object-name>
    <action>
        <button>0</button>
        <repeatable>true</repeatable>
        <interval-sec>0.1</interval-sec>
        <binding>
            <condition>
                <not>
                    <property>devices/status/keyboard/shift</property>
                </not>
            </condition>
                 <command>nasal</command>
                <script>citation.FlDr.set_course(1)</script>
       </binding>
        <binding>
            <condition>
                <property>devices/status/keyboard/shift</property>
            </condition>
                 <command>nasal</command>
                <script>citation.FlDr.set_course(5)</script>
       </binding>
    </action>
</animation>

