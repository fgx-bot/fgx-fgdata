<PropertyList>
<path>stby-gyro.ac</path>

<animation>
    <type>select</type>
    <object-name>AI.ladder</object-name>
    <object-name>AI.bars</object-name>
    <condition>
            <greater-than>
                <property>systems/electrical/left-bus</property>
                <value>5</value>
            </greater-than>
    </condition>
</animation>


    <animation>
        <type>texmultiple</type>
        <object-name>AI.ladder</object-name>
        <transform>
            <property>orientation/pitch-deg</property>
            <subtype>textranslate</subtype>
            <factor>0.00312</factor>
            <axis>
                <x>0</x>
                <y>1</y>
                <z>0</z>
            </axis>
        </transform>
        <transform>
            <property>orientation/roll-deg</property>
            <subtype>texrotate</subtype>
            <center>
                <x>0.25</x>
                <y>0.5</y>
            </center>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>-1</z>
            </axis>
        </transform>
    </animation>

</PropertyList>