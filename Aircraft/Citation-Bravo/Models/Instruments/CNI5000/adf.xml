<?xml version="1.0"?>
<PropertyList>

    <name>ADF</name>
    <w-base>255</w-base>
    <h-base>32</h-base>
    <w>255</w>
    <h>32</h>

    <layers>

        <layer>
            <name>ADF used</name>
            <type>text</type>
            <font>led</font>
            <point-size>9</point-size>
            <color>
                <red>0.75</red>
                <green>0.24</green>
                <blue>0.05</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/adf/frequencies/selected-khz</property>
                    <format>%03.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-62</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-8</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>ADF channel</name>
            <type>text</type>
            <font>led</font>
            <point-size>9</point-size>
            <color>
                <red>0.75</red>
                <green>0.24</green>
                <blue>0.05</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/adf/frequencies/standby-khz</property>
                    <format>%03.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>30</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-8</offset>
                </transformation>
            </transformations>
        </layer>

