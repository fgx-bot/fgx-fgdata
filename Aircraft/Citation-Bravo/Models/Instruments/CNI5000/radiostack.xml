<?xml version="1.0"?>
<!--
Allied Signal CNI-5000 radio stack
-->
<PropertyList>

    <name>Allied Signal Radio</name>
    <w-base>400</w-base>
    <h-base>600</h-base>
    <w>400</w>
    <h>600</h>

    <layers>

<!-- Comm 1-->

        <layer>
            <name>comm1 used</name>
            <condition>
                <greater-than>
                    <property>systems/electrical/outputs/comm</property>
                    <value>5</value>
                </greater-than>
            </condition>
            <type>text</type>
            <font>led</font>
            <point-size>9</point-size>
            <color>
                <red>0.75</red>
                <green>0.24</green>
                <blue>0.05</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/comm[0]/frequencies/selected-mhz</property>
                    <scale>0.999992</scale>
                    <format>%04.2f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-142</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>252</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>comm1 channel</name>
            <condition>
                <greater-than>
                    <property>systems/electrical/outputs/comm</property>
                    <value>5</value>
                </greater-than>
            </condition>
            <type>text</type>
            <font>led</font>
            <point-size>9</point-size>
            <color>
                <red>0.75</red>
                <green>0.24</green>
                <blue>0.05</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/comm[0]/frequencies/standby-mhz</property>
                    <scale>0.999992</scale>
                    <format>%04.2f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-30</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>252</offset>
                </transformation>
            </transformations>
        </layer>

