<?xml version="1.0"?>
<PropertyList>

    <name>Transponder1</name>
    <w-base>255</w-base>
    <h-base>32</h-base>
    <w>255</w>
    <h>32</h>

    <layers>

        <layer>
            <name>FLT</name>
            <type>text</type>
            <font>led</font>
            <point-size>9</point-size>
            <color>
                <red>0.75</red>
                <green>0.24</green>
                <blue>0.05</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/kt-70[1]/outputs/flight-level</property>
                    <format>%03.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-80</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-8</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>FRQ</name>
            <type>text</type>
            <font>led</font>
            <point-size>9</point-size>
            <color>
                <red>0.75</red>
                <green>0.24</green>
                <blue>0.05</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/kt-70[1]/outputs/id-code</property>
                    <format>%04.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>30</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-8</offset>
                </transformation>
            </transformations>
        </layer>
    </layers>
</PropertyList>
